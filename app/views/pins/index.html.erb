<h1>Listing pins</h1>

  <div id="columns">
     <% @pins.each do |pin| %>
        <div class="item-background">
          <div class="pin-image">
            <%= image_tag(pin.image_url, :width => 200)  if pin.image.present? rescue "N/A" %>
          </div>
          <div class="item-info">
            <h3><%= pin.name rescue "N/A" %></h3>
            <h4><%= pin.board.name rescue "N/A" %></h4>
            <h4>By: <%= link_to pin.user.full_name, user_path(pin.user.id) %></h4>
          </div>
          <div class="item-links">
            <%= link_to 'Show', pin %>
            <%= link_to 'Edit', edit_pin_path(pin) %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
  </div>

<br>

<%= link_to 'New Pin', new_pin_path %>
<br>
<%= link_to 'Delete All Pins', Pin, method: :delete, data: {confirm: 'Are you sure?'} %>
